@{
    ViewData["Title"] = "Home Page";
}

@model StatisticsCalculator.Models.MeanCalculatorModel

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3>Enter values below, then select an operation</h3>
    
    <form asp-action="Calculate" method="post">
        <div class="row">
            <div class="col"><h1>Calculator</h1></div>
            <div class="col"><button type="submit" name="operation" value="clear" class="btn btn-outline-secondary">Clear</button></div>
        </div>
    </form>
    @if (Model.Result != null)
    {
        <p><strong>@Model.Label</strong></p>
        <p><strong>@Model.Result</strong></p>
    }
    <form asp-action="Calculate" method="post">
        <div class="form-group">
            <h3>Values</h3>
            <label for="values">Enter numbers (one per line):</label>
            <textarea asp-for="Values" name="Values" id="values" rows="5" class="form-control"></textarea>
            @* @if (Model.Result != null) *@
            @* { *@
            @*     <p><strong>Result: @Model.Result</strong></p> *@
            @* } *@
        </div>
        <div>
            <div class="col"><h2>Descriptive Statistics</h2></div>
            <button type="submit" name="operation" value="ssd" class="btn btn-outline-secondary" style="margin: 10px">Compute Sample Standard Deviation | one value per line</button> <br>
            <button type="submit" name="operation" value="psd" class="btn btn-outline-secondary" style="margin: 10px">Compute Population Standard Deviation | one value per line</button> <br>
            <button type="submit" name="operation" value="mean" class="btn btn-outline-secondary" style="margin: 10px">>Compute Mean | one value per line</button> <br>
            <button type="submit" name="operation" value="zScore" class="btn btn-outline-secondary" style="margin: 10px">>Compute Z Score | value, mean, stdDev on one line</button>
        </div>
        <div>
            <div class="col"><h2>Single Linear Regression</h2></div>
            <button type="button" class="btn btn-outline-secondary" style="margin: 10px">Compute Single Linear Regression Formula | one x,y pair per line</button> <br>
            <button type="submit" name="operation" value="getY" class="btn btn-outline-secondary" style="margin: 10px">Compute Y from Linear Regression Formula | x, m, b on one line</button> <br>
        </div>
    </form>
    <br>
    
    
    
</div>
